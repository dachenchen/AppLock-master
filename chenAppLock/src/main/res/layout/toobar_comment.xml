<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@android:color/transparent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        android:background="@color/blue"
        android:id="@+id/id_tool_bar"
        app:contentInsetStart="0dp">

        <RelativeLayout
                android:id="@+id/Re_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_vertical">
            <RelativeLayout
                android:paddingLeft="@dimen/mh10.0dimens10.0dp"
                android:id="@+id/reback"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="标题"
                android:textSize="@dimen/mh16.0dimens16.0dp"
                android:textColor="@color/white"
                />
            <TextView
                android:visibility="gone"
                android:paddingRight="@dimen/mh10.0dimens10.0dp"
                 android:id="@+id/tv_conmit"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="提交"
                android:textSize="@dimen/mh13.0dimens13.0dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
</RelativeLayout>

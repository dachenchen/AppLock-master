<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <com.star.lockpattern.widget.LockPatternIndicator
        android:id="@+id/lockPatterIndicator"
        android:layout_width="@dimen/mh30.0dimens30.0dp"
        android:layout_height="@dimen/mh30.0dimens30.0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mh50.0dimens50.0dp" />

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mh20.0dimens20.0dp"
        android:text="@string/create_gesture_default"
        android:textColor="@color/grey_a5a5a5"
        android:textSize="@dimen/mh16.0dimens16.0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mh20.0dimens20.0dp"
        android:orientation="vertical">

        <com.star.lockpattern.widget.LockPatternView
            android:id="@+id/lockPatternView"
            android:layout_width="@dimen/mh270.0dimens270.0dp"
            android:layout_height="@dimen/mh270.0dimens270.0dp" />

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mh40.0dimens40.0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/mh20.0dimens20.0dp"
            android:background="@drawable/layout_grey_bg"
            android:text="@string/create_gesture_reset"
            android:textColor="@color/grey_a5a5a5"
            android:textSize="@dimen/mh16.0dimens16.0dp" />

    </LinearLayout>


</LinearLayout>